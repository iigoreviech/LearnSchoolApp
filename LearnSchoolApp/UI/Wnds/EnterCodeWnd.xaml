<Window x:Class="LearnSchoolApp.EnterCodeWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnSchoolApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Resources/school_logo.png"
        Title="Введите код доступа" Height="180" Width="250" FontFamily="Comic Sans MS">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Для совершения данного действия необходимо ввести код доступа:" TextWrapping="Wrap" FontSize="13" Margin="8"
                   VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbxCode" FontSize="17" FontFamily="Comic Sans MS" Padding="-1"  Height="24" Width="180"/>
            <Button x:Name="btnOK" Style="{StaticResource BtnStyle}" Content="OK" FontSize="11" Height="20" Width="65" Margin="8" Click="btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
